    </a>
</div>

<div class="row">
    <div class="col-md-12 text-center">
        <h1>GET THAT TOKEN BOY</h1>
        <a href="https://accounts.spotify.com/authorize?client_id=@(ViewBag.ClientId)&redirect_uri=@(UrlEncoder.Default.Encode(Context.Request.GetEncodedUrl()))&scope=playlist-read-private%20playlist-modify-public%20playlist-modify-private&response_type=token">
            <div class="btn btn-default">Authorize</div>
        </a>
    </div>
</div>
 
@section Scripts
{
    <script>
        function getHashParams() {
            var hashParams = {};
            var e,
                r = /([^&;=]+)=?([^&;]*)/g,
                q = window.location.hash.substring(1);
            while (e = r.exec(q)) {
                hashParams[e[1]] = decodeURIComponent(e[2]);
            }
            return hashParams;
        }

        $(document).ready(function() {
            var params = getHashParams();
            if (params.access_token) {
                var expiry = new Date().valueOf() + params.expires_in * 1000;
                window.location = `/home/playlistsearch?access_token=${params.access_token}&expiry=${expiry}`;
            }
        });
    </script>
}
