@using Spotify.Models.Responses;
@model List<PlaylistItem>

@{
    ViewData["Title"] = "Playlist Search";
}
<h2 id="secretViewSwitch">Playlist Search</h2>

<div>
    <div class="row">
        <div class="col-xs-6">
            <h4>@($"{DateTime.Now:dd/MM h:mm tt}")</h4>
        </div>
        <div class="col-xs-6 text-right ">
            <div id="refreshDataButton" class="btn btn-default spotty-refresh-button">Refresh Data</div>
        </div>
    </div>
    <div class="row">
        <div id="clockdiv" class="col-xs-6">
            <h4>Session: <span class="countdownDisplay"></span></h4>
        </div>
        <div class="col-xs-6 text-right">
            <div id="refreshTokenButton" class="btn btn-default spotty-refresh-button">Refresh Session</div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <input id="searchbar" type="text" class="form-control" aria-label="...">
                <div class="input-group-btn">
                    <button id="selectedSearchOption" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">All <span class="caret"></span></button>
                    <ul id="searchOptions" class="dropdown-menu dropdown-menu-right">
                        <li><a href="#">All</a></li>
                        <li id="searchGo"><a href="#">Song</a></li>
                        <li id="searchArtist"><a href="#">Artist</a></li>
                    </ul>
                </div><!-- /btn-group -->
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div>

    <div id="resultsContainer">
    </div>
    
    <div id="tablePanel" class="panel panel-default media hidden">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Playlist</th>
                        <th>Artist</th>
                        <th>Track</th>
                    </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
        </div>
</div>
<div>
</div>


@section scripts {
    <script>
        const GlobalPlaylists = @Html.Raw(Json.Serialize(Model));
    </script>

    <environment include="Development">
        <script src="~/js/countdown.js" asp-append-version=true></script>
        <script src="~/js/playlistSearch.js" asp-append-version=true></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/playlistSearch.min.js" asp-append-version=true></script>
    </environment>
}
